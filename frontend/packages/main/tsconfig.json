{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "../../types/queries.ts",
    "../../types/channels.ts",
    "../../types/whisperTypes.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
